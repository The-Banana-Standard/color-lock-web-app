rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper functions for security
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    // Puzzles collection (legacy) - read-only for authenticated users
    match /puzzles/{puzzleId} {
      allow read: if isAuthenticated();
      allow write: if false; // Only backend/Cloud Functions can write
    }
    
    // PuzzlesV2 collection - read-only for authenticated users
    match /puzzlesV2/{puzzleId} {
      allow read: if isAuthenticated();
      allow write: if false; // Only backend/Cloud Functions can write
    }
    
    // Users collection - STRICT: users can ONLY access their own document
    match /users/{userId} {
      allow read: if isOwner(userId);
      allow create: if isOwner(userId);
      allow delete: if isOwner(userId);

      // Prevent users from setting sensitive fields on update
      allow update: if isOwner(userId)
        && !request.resource.data.keys().hasAny(['email', 'emailVerified', 'createdAt']);
    }
    
    // User stats - STRICT: users can ONLY access their own stats
    match /userStats/{userId} {
      allow read: if isOwner(userId);
      allow write: if isOwner(userId);
    }
    
    // User puzzle history - STRICT: users can ONLY access their own history
    // The {document=**} wildcard includes ALL subcollections (puzzles, leaderboard, etc.)
    match /userPuzzleHistory/{userId}/{document=**} {
      allow read: if isOwner(userId);
      allow write: if isOwner(userId);
    }
    
    // Daily scores V2 - READ-ONLY for all authenticated users
    // Contains: { easy: {userId: moves}, medium: {userId: moves}, hard: {userId: moves} }
    // Note: User IDs are exposed here for leaderboard purposes (standard for games)
    match /dailyScoresV2/{puzzleId} {
      allow read: if isAuthenticated();
      allow write: if false; // ONLY Cloud Functions can write
    }
    
    // Global leaderboards - READ-ONLY for authenticated users
    // Intentionally public for competitive gaming features
    match /leaderboards/{document=**} {
      allow read: if isAuthenticated();
      allow write: if false; // ONLY Cloud Functions can write
    }

    // Best Scores: Allow authenticated users to read (scores are public)
    // Writes only via Cloud Functions (Admin SDK bypasses rules)
    match /bestScores/{docId} {
      allow read: if isAuthenticated();
      allow write: if false;
    }
    
    // DENY ALL other paths by default - security fallback
    match /{document=**} {
      allow read, write: if false;
    }
  }
}